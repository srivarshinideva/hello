import { Injectable } from '@angular/core';
import { HttpClient, HttpHeaders } from '@angular/common/http';
import { Observable } from 'rxjs';

@Injectable({
  providedIn: 'root'
})
export class ChatbotService {
  baseApiUrl: string = 'http://127.0.0.1:5000/';
  private apiKey = azure
  private searchEndpoint = 'https://claimsearchservice.search.windows.net';
  private indexName = 'azureblob-index';
  constructor(private http: HttpClient) { }

  getChatResponse(currentStep: string, selectedOption: string, currentSubstep: string ):  Observable<any>{
    return this.http.post<any>(`${this.baseApiUrl}next`, { current_step: currentStep, selected_option: selectedOption, current_substep: currentSubstep })
  }

  getInitialChatLoad(): Observable<any> {
    return this.http.get<any>(`${this.baseApiUrl}`)
  }
  searchDocuments(query: string) {
    const url = `${this.searchEndpoint}/indexes/${this.indexName}/docs/search?api-version=2021-04-30-Preview`;
 
    const headers = new HttpHeaders({
      'Content-Type': 'application/json',
      'api-key': this.apiKey
    });
 
    const body = {
      search: query,
      top: 1
    };
 
    return this.http.post<any>(url, body, { headers });
  }
}
